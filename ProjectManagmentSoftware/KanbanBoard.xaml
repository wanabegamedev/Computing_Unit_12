<Window x:Class="ProjectManagmentSoftware.KanbanBoard"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagmentSoftware"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        mc:Ignorable="d"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="KanbanBoard" Height="450" Width="800">

    <Grid x:Name="Base_Grid" Margin="0,56,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="347*"/>
            <RowDefinition Height="32*"/>
        </Grid.RowDefinitions>





        <Grid x:Name="Header_Grid" Grid.Row="0" Margin="0,-53,0,351" VerticalAlignment="Stretch" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
            </Grid.ColumnDefinitions>
            <Label Content="Todo" HorizontalAlignment="Left" RenderTransformOrigin="0,0.767" FontSize="20" Height="28" Width="44" Margin="109,-4,0,0" VerticalAlignment="Top"/>
            <Label Content="In Progress" HorizontalAlignment="Center" RenderTransformOrigin="0,0.767" FontSize="20" Margin="0,-5,0,4" Width="98"/>
            <Label Content="Done" VerticalAlignment="Top" RenderTransformOrigin="0,0.767" FontSize="20" Margin="649,-5,103,0" Height="27" Width="48"/>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,0,0,30" Grid.RowSpan="1" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <Grid x:Name="Kanban_Grid">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            </Grid>
        </ScrollViewer>

        <Button x:Name="LoadCreateCardWindow" Content="Create New Card" Click="LoadCreateCardWindow_Click" Background="Green" Margin="0,0,668,0" Panel.ZIndex="1" VerticalAlignment="Bottom" Grid.RowSpan="2" HorizontalAlignment="Left"/>
        <Button Content="Timeline" Margin="692,0,0,0" Grid.Row="1" Click="Button_Click_1" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>


    </Grid>














</Window>
